<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.huang.practice1.recycle.MenuView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="首页"
        android:visibility="gone" />

    <com.huang.practice1.process.ProcessView1
        android:id="@+id/process_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:horizontalNum="1,1,3,4,1,6,3"
        app:itemColor="#303030"
        app:itemHeight="30dp"
        app:itemHorizontalSpace="20dp"
        app:itemTextSize="14sp"
        app:itemVerticalSpace="35dp"
        app:itemWidth="80dp"
        app:verticalNum="7" />

    <com.huang.practice1.process.ProcessView1
        android:id="@+id/process_view2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:horizontalNum="1,1,3,4,1,6,3"
        app:itemColor="#303030"
        app:itemHeight="30dp"
        app:itemHorizontalSpace="20dp"
        app:itemTextSize="14sp"
        app:itemVerticalSpace="35dp"
        app:itemWidth="80dp"
        app:verticalNum="7" />

</LinearLayout>