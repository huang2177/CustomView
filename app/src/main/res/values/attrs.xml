<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ProcessView1">
        <attr name="itemColor" format="color" />
        <attr name="verticalNum" format="integer" />
        <attr name="horizontalNum" format="string" />
        <attr name="itemWidth" format="dimension" />
        <attr name="itemHeight" format="dimension" />
        <attr name="itemTextSize" format="dimension" />
        <attr name="itemVerticalSpace" format="dimension" />
        <attr name="itemHorizontalSpace" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LyricsView">
        <attr name="isTextBold" format="boolean" />
        <attr name="lineTextColor" format="color" />
        <attr name="lineHeight" format="dimension" />
        <attr name="lineTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BaiduProgressView">
        <attr name="colors" format="string" />
        <attr name="space" format="dimension" />
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="FallingView">
        <attr name="type">
            <enum name="snow" value="0" />
            <enum name="rain" value="1" />
            <enum name="coin" value="2" />
        </attr>
        <attr name="color" format="color" />
    </declare-styleable>

</resources>